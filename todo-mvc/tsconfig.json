{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5",
		"types": [
			"intern"
		],
		"lib": [
			"dom",
			"es5",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown",
			"es7",
			"es6",
			"es2015",
			"es2016",
			"es2017"
		]
	},
	"include": [
		"./typings/index.d.ts",
		"./src/**/*.ts",
		"./tests/**/*.ts"
	],
	"exclude": [
		"./srcDemo"
	]
}